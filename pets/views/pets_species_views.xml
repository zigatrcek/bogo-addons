<odoo>
    <data>
        <record id="pets.species_view_list" model="ir.ui.view">
            <field name="name">pets.species.list</field>
            <field name="model">pets.species</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="scientific_name"/>
                </list>
            </field>
        </record>
        <record id="pets.species_view_form" model="ir.ui.view">
            <field name="name">pets.species.form</field>
            <field name="model">pets.species</field>
            <field name="arch" type="xml">
                <form string="Species">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="scientific_name" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="pets.species_action_window" model="ir.actions.act_window">
            <field name="name">Species</field>
            <field name="res_model">pets.species</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
