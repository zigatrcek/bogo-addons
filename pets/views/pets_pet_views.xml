<odoo>
    <data>
        <record id="pets.pet_view_list" model="ir.ui.view">
            <field name="name">pets.pet.list</field>
            <field name="model">pets.pet</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <field name="pet_type" string="Type" />
                    <field name="sex" />
                    <field name="date_of_birth" />
                    <field name="activity_ids" widget="list_activity" />
                </list>
            </field>
        </record>
        <record id="pets.pet_view_form" model="ir.ui.view">
            <field name="name">pets.pet.form</field>
            <field name="model">pets.pet</field>
            <field name="arch" type="xml">
                <form string="Pet">
                    <sheet>
                        <field name="image_1920" widget='image' class="oe_avatar" options="{'preview_image': 'image_128', 'zoom': True}" />
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="e.g. Marco" class="oe_inline"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Basic Info">
                                <field name="pet_type" />
                                <field name="sex" />
                                <field name="vet_id" />
                            </group>
                            <group string="Passport Information">
                                <field name="official_name" />
                                <field name="date_of_birth" />
                                <field name="passport_number" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Weight">
                                <field name="weight_measurement_ids" context="{'default_measurement_type': 'weight'}">
                                    <list editable="bottom">
                                        <field name="date"/>
                                        <field name="value" string="Weight"/>
                                        <field name="measurement_type" column_invisible="1"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Size">
                                <field name="size_measurement_ids" context="{'default_measurement_type': 'size'}">
                                    <list editable="bottom">
                                        <field name="date"/>
                                        <field name="value" string="Size"/>
                                        <field name="measurement_type" column_invisible="1"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Costs">
                                <field name="move_ids" context="{'default_move_type': 'in_invoice'}">
                                    <list>
                                        <field name="name" />
                                        <field name="partner_id" />
                                        <field name="amount_total_signed" />
                                    </list>
                                </field>
                            </page>
                            <page string="Recurring Tasks"></page>
                            <page string="Medical History"></page>
                        </notebook>
                    </sheet>
                    <chatter />
                </form>
            </field>
        </record>
        <record id="pets.pet_view_kanban" model="ir.ui.view">
            <field name="name">pets.pet.kanban</field>
            <field name="model">pets.pet</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="card" class="flex-row">
                            <aside class="o_kanban_aside_full">
                                <field name="avatar_128" class="w-100" widget="image" options="{'img_class': 'object-fit-contain w-100 h-100'}"/>
                            </aside>
                            <main class="ps-2 ps-md-0">
                                <div class="mb-1">
                                    <field name="display_name" class="mb-0 fw-bold fs-5"/>
                                </div>
                                <div>
                                    <field name="pet_type" class="text-muted"/>
                                </div>
                                <footer class="pt-1 p-0 m-0">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </footer>
                            </main>
                        </t>
                    </templates>
                </kanban>

            </field>

        </record>
        <record id="pets.pet_action_window" model="ir.actions.act_window">
            <field name="name">Pets</field>
            <field name="res_model">pets.pet</field>
            <field name="view_mode">kanban,list,form</field>
        </record>
    </data>
</odoo>
