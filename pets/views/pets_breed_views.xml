<odoo>
    <data>
        <record id="pets.breed_view_list" model="ir.ui.view">
            <field name="name">pets.breed.list</field>
            <field name="model">pets.breed</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="species_id"/>
                </list>
            </field>
        </record>
        <record id="pets.breed_view_form" model="ir.ui.view">
            <field name="name">pets.breed.form</field>
            <field name="model">pets.breed</field>
            <field name="arch" type="xml">
                <form string="Breed">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="species_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="pets.breed_action_window" model="ir.actions.act_window">
            <field name="name">Breed</field>
            <field name="res_model">pets.breed</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
