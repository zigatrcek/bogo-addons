<odoo>
    <data>
        <record id="pets.account_move_form" model="ir.ui.view">
            <field name="name">pets.account.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <group name="accounting_info_group" position="after">
                    <group string="Connections" name="connections_info_group" invisible="move_type not in ('in_invoice', 'in_refund')">
                        <field name="pet_id" />
                    </group>
                </group>
            </field>
        </record>
    </data>
</odoo>
